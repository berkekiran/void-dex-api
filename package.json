{
  "name": "void-dex-api",
  "version": "1.0.0",
  "description": "Privacy-first DEX aggregator backend. Aggregates quotes from multiple DEXes and finds optimal swap routes.",
  "author": "Berke Kiran",
  "license": "MIT",
  "keywords": ["dex", "aggregator", "defi", "privacy", "nestjs", "web3", "ethereum"],
  "repository": {
    "type": "git",
    "url": "https://github.com/berkekiran/void-dex-api"
  },
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "predev": "lsof -ti:3013 | xargs kill -9 2>/dev/null || true",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "11.1.9",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.9",
    "@nestjs/jwt": "11.0.1",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.9",
    "@nestjs/swagger": "11.2.3",
    "@nestjs/throttler": "6.4.0",
    "@nestjs/typeorm": "11.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "ethers": "6.16.0",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pg": "8.16.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.27",
    "uuid": "13.0.0",
    "viem": "2.40.3"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.9",
    "@types/express": "5.0.5",
    "@types/jest": "29.5.14",
    "@types/node": "24.10.1",
    "@types/passport-jwt": "4.0.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "29.7.0",
    "prettier": "3.7.2",
    "source-map-support": "0.5.21",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
